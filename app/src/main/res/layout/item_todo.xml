<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:elevation="12dp"
        app:cardCornerRadius="12dp">

    <View
            android:id="@+id/ViewColorTag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <RelativeLayout
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="6dp"
                android:layout_marginEnd="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_toStartOf="@+id/txtShowCategory"
                    android:text="Task Title"
                    android:textColor="#2980B9"
                    android:textSize="20sp"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/txtShowTitle"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Task Descripton"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtShowTitle"
                    android:id="@+id/txtShowTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="category"
                    android:textColor="#C0392B"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtShowCategory"
                    android:maxWidth="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Date"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtShowTask"
                    android:id="@+id/textDate"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="07-02-2021"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_below="@+id/textDate"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/txtShowDate"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="Time"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtShowTask"
                    android:id="@+id/textTime"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="11:45 PM"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_below="@+id/textTime"
                    android:layout_marginEnd="6dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtShowTime"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>